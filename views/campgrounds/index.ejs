<%- include ../partials/header.ejs %>
<div class="container">
    <header class="jumbotron">
        <h1>Welcome to Spellbinding Attraction</h1>
        <p>Best attractions  review site based on thousand of reviewer from all over the world!</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new place</a>
        </p>
    </header> 
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds .forEach(campground => {%>
            <div class="col-md-4 col-sm-6" style="margin-bottom: 25px;">
                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top">
                    <div class="card-body">
                        <p class="card-text" ><%=campground.name%></p>
                        <a href="/campgrounds/<%=campground._id %> " class="btn btn-info">More Info</a>
                    </div>
                </div>
            </div>
        <%});%>
    </div>
</div>
<%- include ../partials/footer.ejs %> 